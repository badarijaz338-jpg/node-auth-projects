{
  "info": {
    "name": "Task 3 - Role Based Access",
    "_postman_id": "role-auth-67890",
    "description": "NodeJS Authentication with bcrypt + JWT + Role-based Access (User/Admin)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register (with Role)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:3002/auth/register", "protocol": "http", "host": ["localhost"], "port": "3002", "path": ["auth","register"] },
        "body": { "mode": "raw", "raw": "{\n    \"username\": \"bob\",\n    \"password\": \"Admin@123\",\n    \"role\": \"admin\"\n}" }
      }
    },
    {
      "name": "Login (with Role)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "if (res.token) {",
              "    pm.collectionVariables.set(\"authToken\", res.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:3002/auth/login", "protocol": "http", "host": ["localhost"], "port": "3002", "path": ["auth","login"] },
        "body": { "mode": "raw", "raw": "{\n    \"username\": \"bob\",\n    \"password\": \"Admin@123\"\n}" }
      }
    },
    {
      "name": "Profile (User Access)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{authToken}}" }],
        "url": { "raw": "http://localhost:3002/protected/profile", "protocol": "http", "host": ["localhost"], "port": "3002", "path": ["protected","profile"] }
      }
    },
    {
      "name": "Admin Only Route",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{authToken}}" }],
        "url": { "raw": "http://localhost:3002/protected/admin", "protocol": "http", "host": ["localhost"], "port": "3002", "path": ["protected","admin"] }
      }
    }
  ],
  "variable": [{ "key": "authToken", "value": "" }]
}
